@model EventPorter.Models.Adam
@{
    ViewBag.Title = "Profile";
}
@section Styles{
<link href="~/Content/Profile.css" rel="stylesheet" type="text/css" />
}
@section scripts{
<script>
    $(function () {
        $('#Overview').on("click", function () {
            $.get('@Url.Action("AdamInfo","Account")', function (data) {
                $("#infoDiv").html(data);
            });
            $('#Settings').on("click"), function () {
                $.get('@Url.Action("Settings","Account")' function(data) {
                    $("#infoDiv").html(data);
                });
            });

    </script>
    }
<h2>Profile</h2>
<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- sidebar for Adam profile pic -->
                <div class="profile-Adampic">
                    <img src="~/Content/images/lil_porter.png" class="img-responsive" alt="">
                </div>
                <!-- sidebar for Adam info -->
                <div class="profile-Adamtitle">
                    <div class="profile-Adamtitle-Adamname">
                        Adam
                    </div>
                </div>
                
                <!-- buttons -->
                <div class="profile-Adambuttons">
                    <button type="button" class="btn btn-success btn-sm">Invite</button>
                    <button type="button" class="btn btn-danger btn-sm">Message</button>
                </div>
                <!-- menu -->
                <div class="profile-Adammenu">
                    <ul class="nav">
                        <li class="active">
                            <button class="btn glyphicon glyphicon-home profile-Adammenu" id="Overview">Overview</button>
                            @*@Html.ActionLink(" Overview", "Profile", "Account", "", new { @class = "glyphicon glyphicon-home profile-Adammenu" })*@
                         </li>
                        <li>
                            <button class="btn glyphicon glyphicon-cog profile-Adammenu" id="Settings">Settings</button>
                            @*@Html.ActionLink(" AccountSettings", "Settings", "Account", "", new { @class = "glyphicon glyphicon-cog profile-Adammenu"})*@
                        </li>
                        <li>
                            @Html.ActionLink(" Events", "Event", "Event", "", new { @class= "glyphicon glyphicon-ok profile-Adammenu" })
                        </li>
                        <li>
                            @Html.ActionLink(" Help", "Help", "Contact", "", new { @class="glyphicon glyphicon-flag"})
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8" id="infoDiv">
            
        </div>
        @*<div class="col-md-5">
            <div class="profile-content">
                Upcoming Event cards here 
            </div>
        </div>
        <div class="col-md-4">
            <div class="profile-content">
                Past event cards here/only show these to other users
            </div>
        </div>*@
    </div>
</div>
